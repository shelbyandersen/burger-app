<h1>Eat Da Burger!</h1>

<div class="burgers-to-devour">
  <h2>Burgers to Devour</h2>

  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="burgers-eaten">
  <h2>Burgers Eaten</h2>

  <ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
  </ul>
</div>

<h2 class="add-burger">Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Enter a Burger you want to eat!</label><br>
    <input type="radio" name="devoured" value="1" checked> Devour Burger!<br><br>
    {{!-- <input type="radio" name="devoured" value="0"> Eaten --}}
    <button type="submit" id="add-burger-btn">Add Burger</button>
  </div>


</form>